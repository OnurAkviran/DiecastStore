@model List<Item>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Item List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Item" asp-action="InsertUpdate" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create new Item
                </a>
            </div>
        </div>
        <table id="tblData" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Car Brand
                    </th>
                    <!--<th></th>-->
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/item.js"></script>
}
